/* pages/detail/detail.wxss */
.detail-container{
  height:400rpx;
  opacity:0.9;
 filter:blur(40rpx);  /* 滤镜 */
}
/* 遮罩层 */
.detail-mask{
  width:100%;
  position: absolute;
  height:400rpx;
  background:#333;
  left:0;
  top:0;
  z-index:-1;
}
/* 3 电影的完整信息*/
.detail-info{
  position: absolute;
   display: flex; /*弹性*/
  width:100%;
   height:400rpx;
   left:0;
  top:0;
}
/* 4.左侧图片 */
.detail-img{
  width:280rpx;
   height:90%;
   margin-right: 24rpx;
}
/* 右侧文本 */
.detail{
  line-height: 60rpx;
}
.detail view{
  color:#fff;
  font-size:24rpx;
}
/* 电影评分 */
.detail .detail-sc{
  color:#fc0;
  font-size:36rpx;
}
/* 电影描述 */
.desc{
  color:#555;
  font-size:24rpx;
  padding:20rpx;
}
/* 预览图片 */
.comment-img{
  width: 200rpx;
  height: 200rpx;
  margin-right:20rpx;
}